@model NovoePokolenie.ViewModels.LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Логин Преподавателя</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: #111;
            font-family: sans-serif;
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-form {
            min-width: 300px;
            width: 30vw;
            margin: 0 auto;
            border: 2px solid #000;
            padding: 1rem;
            background: #111;
            border-radius: 5px;
            box-shadow: 0px 10px 20px 0px rgba(0,0,0,1);
        }

            .login-form input[type="password"],
            .login-form input[type="text"] {
                width: 100%;
                padding: 1rem;
                border: 1px solid #000;
                background: #222426;
                border-radius: 2px;
                font-family: sans-serif;
                font-size: 1rem;
                color: #eee;
                outline: none;
                margin-top: 1rem;
            }

            .login-form input[type="submit"] {
                width: 100%;
                padding: 15px;
                background: #222426;
                border: 0;
                border-radius: 2px;
                color: #fff;
                text-transform: uppercase;
                font-weight: bold;
                cursor: pointer;
                margin-top: 1rem;
            }

        input[type="submit"] {
            cursor: pointer;
        }

        .login-form input[type="submit"]:hover {
            background: #535b63;
            transition: background-color 0.2s ease;
        }

        img {
            min-width: 5rem;
            max-width: 7rem;
            margin: 1rem auto;
            display: block;
        }
    </style>
</head>
<body>
    <form class="login-form" method="post" asp-controller="Account" asp-action="Login">
        <img src="logo.png" alt="">
        <div asp-validation-summary="All"></div>
        <input asp-for="Login" type="text" placeholder="Имя">
        <input type="password" asp-for="Password" placeholder="Пароль">
        <input type="submit" value="Войти">
    </form>
</body>
</html>